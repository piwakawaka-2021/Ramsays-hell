            <div >
                <h3 class="">{{getDish/id}}</h3>
                <a href="/getDish/{{id}}"><img class="image-container" src="{{imageURL}}" alt="{{name}}"></a>
            </div>

        {{/each}}

        </div>

    </div>
</div>